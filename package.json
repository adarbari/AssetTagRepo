{
  "name": "asset-tag-monorepo",
  "version": "1.0.0",
  "description": "Asset Tag tracking system with Bluetooth location estimation",
  "private": true,
  "workspaces": [
    "asset-tag-frontend",
    "asset-tag-backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd asset-tag-frontend && npm run dev",
    "dev:backend": "cd asset-tag-backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd asset-tag-frontend && npm run build",
    "build:backend": "cd asset-tag-backend && docker build -t asset-tag-backend .",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd asset-tag-frontend && npm run test",
    "test:backend": "cd asset-tag-backend && pytest",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd asset-tag-frontend && npm run lint",
    "lint:backend": "cd asset-tag-backend && flake8 . && black --check . && isort --check-only .",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd asset-tag-frontend && npm run format",
    "format:backend": "cd asset-tag-backend && black . && isort .",
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd asset-tag-frontend && npm install",
    "setup:backend": "cd asset-tag-backend && pip install -r requirements.txt && pip install -r requirements-dev.txt",
    "infrastructure:up": "cd asset-tag-backend && docker-compose up -d",
    "infrastructure:down": "cd asset-tag-backend && docker-compose down",
    "infrastructure:logs": "cd asset-tag-backend && docker-compose logs -f",
    "db:migrate": "cd asset-tag-backend && alembic upgrade head",
    "db:reset": "cd asset-tag-backend && docker-compose down -v && docker-compose up -d && sleep 10 && alembic upgrade head"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/AssetTagRepo.git"
  },
  "keywords": [
    "asset-tracking",
    "bluetooth",
    "location-estimation",
    "geofencing",
    "iot",
    "fastapi",
    "react",
    "typescript"
  ],
  "author": "Your Organization",
  "license": "MIT"
}
